<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.GameForPlayer" table="player_games">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="identity"/>
        </id>
        <property name="playerAlias" column="player_alias" type="java.lang.String"/>
        <property name="idGame" column="game_id" type="java.lang.Integer"/>
        <property name="numberOfTries" column="number_of_tries" type="java.lang.Integer"/>
        <property name="proposedPositions" column="proposed_positions" type="java.lang.String"/>
        <property name="textOfClue" column="text_of_clue" type="java.lang.String"/>
    </class>
</hibernate-mapping>
