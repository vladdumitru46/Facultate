<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.Clue" table="clue">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="identity"/>
        </id>
        <property name="positionLine" column="position_line" type="java.lang.Integer"/>
        <property name="positionColumn" column="position_column" type="java.lang.Integer"/>
        <property name="textOfClue" column="text_of_clue" type="java.lang.String"/>
    </class>
</hibernate-mapping>
