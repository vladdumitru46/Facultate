<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.Game" table="games">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="identity"/>
        </id>
        <property name="player1" column="player1" type="java.lang.Integer"/>
        <property name="player2" column="player2" type="java.lang.Integer"/>
        <property name="positionOfPlayer1Boat" column="position_player1_boat" type="java.lang.String"/>
        <property name="positionOfPlayer2Boat" column="position_player2_boat" type="java.lang.String"/>
        <property name="winner" column="winner" type="java.lang.String"/>
        <property name="noPositionsPlayedPlayer1" column="npp1" type="java.lang.Integer"/>
        <property name="noPositionsPlayedPlayer2" column="npp2" type="java.lang.Integer"/>
    </class>
</hibernate-mapping>
